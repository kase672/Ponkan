<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 外側の色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#bebebe"/>  <!-- 外側の色を指定 -->
        </shape>
    </item>

    <!-- 内側の白い背景 -->
    <item android:top="1dp" android:bottom="1dp" android:right="6dp" android:left="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 内側の色を指定 -->
            <corners android:radius="30dp" /> <!-- 角を丸くする半径を指定 -->
        </shape>
    </item>

</layer-list>